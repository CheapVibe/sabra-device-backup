# Sabra Device Backup - Environment Configuration
# Copy this file to /opt/sabra/.env and update values

# Django Settings
DJANGO_SETTINGS_MODULE=sabra.settings.production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Security Keys (CHANGE THESE!)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-to-a-secure-random-string

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=change-me-to-a-fernet-key

# Database
DATABASE_URL=postgres://sabra:sabra_password@localhost:5432/sabra

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Timezone
TZ=UTC

# Logging
LOG_LEVEL=INFO

# Network automation settings
NETMIKO_SSH_TIMEOUT=30
NETMIKO_AUTH_TIMEOUT=20
BACKUP_CONCURRENT_CONNECTIONS=5
