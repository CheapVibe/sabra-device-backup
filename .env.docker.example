# Sabra Device Backup - Docker Environment Variables
# Copy this file to .env and fill in the values
# Generate secrets with: ./docker/scripts/generate-secrets.sh

# ===================
# Required Settings
# ===================

# Django secret key (generate with: python3 -c 'import secrets; print(secrets.token_urlsafe(50))')
SECRET_KEY=change-me-generate-a-secure-random-key

# Database password (generate with: python3 -c 'import secrets; print(secrets.token_urlsafe(24))')
DB_PASSWORD=change-me-generate-a-secure-password

# Fernet encryption key for credentials (generate with: python3 -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())')
FERNET_KEY=change-me-generate-a-fernet-key

# Allowed hostnames (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,your-domain.com

# ===================
# Optional Settings
# ===================

# Debug mode (default: False)
DEBUG=False

# Database settings (defaults should work with docker-compose)
DB_NAME=sabra
DB_USER=sabra

# Timezone (default: UTC)
TZ=UTC

# Port mappings (change if ports 80/443 are in use)
HTTP_PORT=80
HTTPS_PORT=443

# Use a specific image version instead of building locally
# SABRA_IMAGE=ghcr.io/tigerz931/sabra-device-backup:latest
